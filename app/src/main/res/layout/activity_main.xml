<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#800000"
    android:weightSum="1"
    tools:context="com.kbtci.kbpl.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/wifi_list_layout1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="2dp"
            android:layout_margin="5dp"
            android:layout_weight="0.5"
            android:background="@drawable/rounded_color_corners"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp" >
                <EditText
                    android:id="@+id/team_a_name"
                    android:background="@drawable/rounded_edittext_corner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:layout_margin="1dp"
                    android:singleLine="true"
                    android:hint="Enter Team-A Name"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Runs : "
                        android:textSize="15sp"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/team_a_run"
                        android:singleLine="true"
                        android:numeric="integer"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edittext_corner"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balls : "
                        android:textSize="15sp"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/team_a_balls"
                        android:singleLine="true"
                        android:numeric="integer"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edittext_corner"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wkts : "
                        android:textSize="15sp"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/team_a_wkts"
                        android:singleLine="true"
                        android:numeric="integer"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edittext_corner"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/wifi_list_layout"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="5dp"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:background="@drawable/rounded_color_corners"
            android:orientation="vertical" >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp" >
                <EditText
                    android:id="@+id/team_b_name"
                    android:background="@drawable/rounded_edittext_corner"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:textAlignment="center"
                    android:layout_margin="1dp"
                    android:singleLine="true"
                    android:hint="Enter Team-B Name"
                    android:textSize="18sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Runs : "
                        android:textSize="15sp"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/team_b_run"
                        android:singleLine="true"
                        android:numeric="integer"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edittext_corner"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Balls : "
                        android:textSize="15sp"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/team_b_balls"
                        android:singleLine="true"
                        android:numeric="integer"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edittext_corner"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Wkts : "
                        android:textSize="15sp"/>
                    <EditText
                        android:textAlignment="center"
                        android:id="@+id/team_b_wkts"
                        android:singleLine="true"
                        android:numeric="integer"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:background="@drawable/rounded_edittext_corner"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:id="@+id/team_a_rr"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="Team-A RunRate"
                android:gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <Button
                android:layout_marginLeft="50dp"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:id="@+id/team_b_rr"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Team-B RunRate"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/rounded_color_corners"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A Run Rate : "
                android:textSize="15sp"/>
            <EditText
                android:textAlignment="center"
                android:id="@+id/team_a_runrate"
                android:singleLine="true"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_edittext_corner"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B Run Rate : "
                android:textSize="15sp"/>
            <EditText
                android:textAlignment="center"
                android:id="@+id/team_b_runrate"
                android:singleLine="true"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_edittext_corner"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <Button
                android:id="@+id/teams_net_runrate_btn"
                android:layout_width="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_height="40dp"
                android:textAlignment="center"
                android:text="Net RunRate"
                android:gravity="center" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/rounded_color_corners"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team-A NetRunRate : "
                android:textSize="15sp"/>
            <EditText
                android:textAlignment="center"
                android:id="@+id/team_a_net_runrate"
                android:singleLine="true"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_edittext_corner"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team-B NetRunRate : "
                android:textSize="15sp"/>
            <EditText
                android:textAlignment="center"
                android:id="@+id/team_b_net_runrate"
                android:singleLine="true"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:background="@drawable/rounded_edittext_corner"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#00FFFF"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Winner Team is:"
            android:textSize="15sp"/>
        <TextView
            android:textColor="#00FF00"
            android:textSize="20sp"
            android:id="@+id/winnerTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>
